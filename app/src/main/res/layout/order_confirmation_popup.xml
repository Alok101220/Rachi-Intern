<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/topBar"
        android:padding="10dp">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:id="@+id/back_from_order_confirmation"
            android:src="@drawable/icon_back"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBar"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected item: "
                android:paddingTop="0dp"
                android:paddingBottom="10dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_summary_recyclerView"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/bottom_container"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:background="#EFECFA">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/remove_product_container"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:visibility="visible"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cart_total_price_title"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Total: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_summary_total_price"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/base_color"
                android:layout_toEndOf="@+id/cart_total_price_title"
                android:layout_marginStart="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_product_container"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_summary_payment_button"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Payment"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_product_loading"
                app:lottie_fileName="loading.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:paddingTop="15dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>